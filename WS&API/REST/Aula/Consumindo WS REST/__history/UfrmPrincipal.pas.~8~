{$R *.dfm}

procedure TForm2.btnPingPongClick(Sender: TObject);
begin
  Self.PingPong;
end;

procedure TForm2.PingPong;
begin
  RESTClient1.BaseURL := 'http://localhost:9886/ping';
  RESTRequest1.Execute;

  Self.TratarResposta;
